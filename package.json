{
  "name": "node-cronflow",
  "version": "0.1.0",
  "description": "A sophisticated workflow automation engine built on Node.js + Rust",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "npm run build:sdk && npm run build:services && npm run build:main",
    "build:sdk": "tsc -p sdk/tsconfig.json",
    "build:services": "tsc -p services/tsconfig.json",
    "build:main": "tsc -p tsconfig.json",
    "build:core": "cd core && cargo build",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts sdk/**/*.ts services/**/*.ts",
    "lint:fix": "eslint src/**/*.ts sdk/**/*.ts services/**/*.ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "dev": "tsc --watch",
    "clean": "rm -rf dist node_modules packages",
    "install:all": "npm install && npm run build"
  },
  "keywords": [
    "workflow",
    "automation",
    "nodejs",
    "rust",
    "cron",
    "scheduler",
    "webhooks"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "@vitest/ui": "^2.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0",
    "@rollup/rollup-linux-x64-gnu": "^4.40.0"
  }
}
