{
  "name": "node-cronflow",
  "version": "0.0.0",
  "description": "A sophisticated workflow automation engine built on Node.js + Rust, providing a code-first alternative to tools like n8n",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*",
    "core/core.node",
    "README.md",
    "LICENSE"
  ],
  "napi": {
    "binaryName": "core",
    "targets": [
      "x86_64-pc-windows-msvc",
      "i686-pc-windows-msvc",
      "aarch64-apple-darwin",
      "x86_64-apple-darwin",
      "x86_64-unknown-linux-gnu",
      "x86_64-unknown-linux-musl",
      "aarch64-unknown-linux-gnu",
      "aarch64-unknown-linux-musl",
      "armv7-unknown-linux-gnueabihf",
      "x86_64-unknown-freebsd"
    ]
  },
  "scripts": {
    "build": "npm run build:sdk && npm run build:services && npm run build:main",
    "build:sdk": "tsc -p sdk/tsconfig.json",
    "build:services": "tsc -p services/tsconfig.json",
    "build:main": "tsc -p tsconfig.json",
    "build:core": "cd core && napi build --release --package-json-path ../package.json",
    "build:core:debug": "cd core && napi build --package-json-path ../package.json",
    "build:all": "npm run build:core && npm run build",
    "prepublishOnly": "npm run build:all && npm run test:package",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:package": "node scripts/test-package.js",
    "test:napi": "node tests/napi/bridge-test.js",
    "lint": "eslint src/**/*.ts sdk/**/*.ts services/**/*.ts",
    "lint:fix": "eslint src/**/*.ts sdk/**/*.ts services/**/*.ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "dev": "tsc --watch",
    "clean": "rm -rf dist node_modules packages core/core.node",
    "install:all": "npm install && npm run build:all",
    "release": "semantic-release",
    "release:dry-run": "semantic-release --dry-run"
  },
  "keywords": [
    "workflow",
    "automation",
    "nodejs",
    "rust",
    "cron",
    "scheduler",
    "webhooks",
    "n8n-alternative",
    "workflow-engine",
    "api-automation"
  ],
  "author": {
    "name": "Node-Cronflow Team",
    "email": "team@node-cronflow.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/node-cronflow/node-cronflow/issues"
  },
  "homepage": "https://github.com/node-cronflow/node-cronflow#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "os": [
    "linux",
    "darwin",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "dependencies": {
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@napi-rs/cli": "^3.0.0",
    "@semantic-release/changelog": "^7.0.0",
    "@semantic-release/git": "^11.0.0",
    "@semantic-release/npm": "^11.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "@vitest/ui": "^2.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.0",
    "semantic-release": "^23.0.0",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0",
    "@rollup/rollup-linux-x64-gnu": "^4.40.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
