{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2022", "DOM"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["node"],
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@node-cronflow/sdk": ["sdk"],
      "@node-cronflow/services": ["services"],
      "@node-cronflow/core": ["core"]
    }
  },
  "include": ["src/**/*", "sdk/**/*", "services/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "packages",
    "core/**/*.rs"
  ]
}
