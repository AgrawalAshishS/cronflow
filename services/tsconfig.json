{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2022",
    "moduleResolution": "node",
    "lib": ["ES2022", "DOM"],
    "outDir": "../dist/services",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false,
    "removeComments": true,
    "types": ["node"],
    "noEmit": false,
    "downlevelIteration": true
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"]
}
