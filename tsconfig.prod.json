{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2022",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "outDir": "./dist/dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "removeComments": true,
    "noEmit": false,
    "baseUrl": ".",
    "downlevelIteration": true,
    "importHelpers": true,
    "importsNotUsedAsValues": "remove",
    "isolatedModules": true
  },
  "include": ["src/**/*", "sdk/**/*", "services/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "packages",
    "core/**/*.rs",
    "tests/**/*",
    "examples/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.test.js",
    "**/*.spec.js"
  ]
}
