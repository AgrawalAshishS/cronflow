# NPM Configuration for Cronflow Monorepo

# Workspace settings
workspaces-update=false
save-workspace-protocol=false

# Registry settings
registry=https://registry.npmjs.org/

# Security settings
audit-level=moderate
fund=false

# Performance settings
prefer-offline=true

# Development settings
save-exact=false
save-prefix=^

# Fix for optional dependencies issue
optional=false 